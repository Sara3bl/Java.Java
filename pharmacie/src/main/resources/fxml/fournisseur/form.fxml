            <TextField fx:id="txtTelephone" promptText="Ex: 0612345678"/>
            <Label fx:id="lblTelephoneError" styleClass="error-label" visible="false"/>
        </VBox>
        
        <!-- Row 3 -->
        <Label text="Adresse *" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="3">
            <TextArea fx:id="txtAdresse" promptText="Adresse complÃ¨te..." prefRowCount="3"/>
            <Label fx:id="lblAdresseError" styleClass="error-label" visible="false"/>
        </VBox>
    </GridPane>
    
    <!-- Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <padding>
            <Insets top="10"/>
